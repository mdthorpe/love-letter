doctype html5
html
  include ./includes/head.jade
  link(href='/css/player.css', rel='stylesheet')
  link(href='/css/message_banner.css', rel='stylesheet')
  body
    #player-name.player-name Not Set
    .player-info Player Info
    .frameT
      .frameTC
        .content
          form.ask-player-name
            h1 Your Name?
            input(type='text', autocomplete='off', autofocus)
            button Set
          .container
            .cards 
          .target-players.overlay(data-pos="flippedup")
          .target-cards.overlay(data-pos="flippedup")
            .target-instruction Pick a Card
            .target-card(data-card="priest") Priest
            .target-card(data-card="baron") Baron
            .target-card(data-card="handmaid") Handmaid
            .target-card(data-card="prince") Prince 
            .target-card(data-card="king") King
            .target-card(data-card="countess") Countess
            .target-card.target-princess(data-card="princess") Princess
          .banner-box
            .banners(data-anim="none")
              .banner Waiting to start.
    include ./includes/status_messages.jade
    .debug
      //- button.debug-button(onMouseUp='draw_card()') Draw Card
      button.debug-button(onMouseUp='play_card()') Play Card 
      //- button.debug-button.debug-get-hand Request Hand    
  include ./includes/scripts.jade
  script(src='js/player.js')

